/* pages/index/index.wxss */
@import "../../utils/icon.wxss";

.step{
  text-align: center;
  padding: 10rpx;
}
.bg{
  position: absolute;
  bottom: 0;
  top: 0;
  left: 0;
  right: 0;
  box-sizing: border-box;
  overflow: hidden;
}
.panel{
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 20%;
  background-color: black;
  opacity: 0.4;  
  border-radius:15px;


}
.panel2{
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 20%; 
  text-align: center;
  display: flex;
  justify-content: center;
  flex-direction: column;
  color:rgb(223,218,220);

}
.handline{
  display:block;
  text-align: center;
  padding: 20rpx 0;
}
.content{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-around;
  align-items: center;
}
.text{
  margin-left:10rpx; 
}
.blur {     
   filter: blur(10px);    
}